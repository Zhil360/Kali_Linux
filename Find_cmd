find ./foldername -name sample.txt 
find ./GFG -name *.txt  , "pattern search"
find ./GFG -name sample.txt -exec rm -i {} \; ,"deleting a file"
find ./GFG -empty , "find empty files"
find . -type d , "find directory"
find ./ -type f -name "*.txt" -exec grep 'Geek'  {} \; , "search a text in multiple files"
find ./GFG -perm 664 , find file by permissions
find / -user www-data -type f  -exec chown nginx {} \;  , search by user file
find . -type f -size +1M
find . -type f -size +1M -size 21M
find /home -mtime +30 -daystart
find /var/log/ -name `*.temp` -delete , https://linuxize.com/post/how-to-find-files-in-linux-using-the-command-line/#google_vignette
